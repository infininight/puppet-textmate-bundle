				<string>/opt/local/bin/puppet</string>
				<string>/usr/local/bin/puppet</string>
				<string>/usr/bin/puppet</string>
			</array>
			<key>variable</key>
			<string>TM_PUPPET</string>
		</dict>
	</array>
